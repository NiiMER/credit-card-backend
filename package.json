{
  "name": "credit-card-system",
  "version": "1.0.0",
  "description": "Web application to add and manage payment methods by storing it in a firebase storage on the cloud",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules ./src/index.mjs",
    "lint": "eslint ./src --ext .json --ext js,mjs --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "expressjs",
    "schema-validation",
    "firebase"
  ],
  "author": "Mohamad Nimer",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.{js,mjs}": [
      "npm run --silent lint", "git add"
    ],
    "src/**/*.{json}": [
      "npm run --silent lint", "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.3.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "config": "^3.2.2",
    "express": "^4.17.1",
    "firebase": "^7.0.0",
    "jsonschema": "^1.2.4",
    "pretty-error": "^2.1.1",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "eslint-config": "^0.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lint-staged": "^9.4.1",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "regenerator-runtime": "^0.13.3"
  }
}
