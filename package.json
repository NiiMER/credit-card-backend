{
  "name": "credit-card-system",
  "version": "1.0.1",
  "description": "Web application to add and manage payment methods by storing it in a firebase storage on the cloud",
  "main": "./src/index.mjs",
  "scripts": {
    "start": "NODE_ENV=production node --experimental-modules --experimental-json-modules ./src/index.mjs",
    "start:development": "NODE_ENV=development node --experimental-modules --experimental-json-modules ./src/index.mjs",
    "lint": "eslint . --ext js,mjs,json --fix",
    "test": "jest --env=node --config=jest.config.json"
  },
  "keywords": [
    "nodejs",
    "expressjs",
    "schema-validation",
    "firebase"
  ],
  "author": "Mohamad Nimer",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.{js,mjs}": [
      "npm run --silent lint",
      "git add"
    ],
    "./**/*.{json}": [
      "npm run --silent lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "firebase": "^7.6.0",
    "jsonschema": "^1.2.5",
    "pretty-error": "^2.1.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^26.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.0.0",
    "eslint-config": "^0.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.3"
  }
}
